package data;

import static helpers.Artist.quickLoad;

public class Game {
	
	//hold every component of the game
	private TileGrid grid;
	private Player player;
	private Wave wave;
	//temp variable
	TowerCannon tower;
	
	public Game(int[][] map){
		grid = new TileGrid(map);
		player = new Player(grid);
		wave = new Wave(20, new Enemy(quickLoad("Ufo"),grid.getTile(2, 14),grid,64,64,5));
		
		tower = new TowerCannon(quickLoad("tower"),grid.getTile(2, 6),10);
	}
	
	public void update(){
		grid.draw();
		wave.update();
		player.update();
		tower.update();
		
	}
	
}
